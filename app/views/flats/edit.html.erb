<div class="container">
  <h1>Add a new flat</h1>
    <%= simple_form_for@flat do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit "submit" %>
    <% end %>
</div>
