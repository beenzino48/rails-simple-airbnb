<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <%= @flat.name %>
            <%= link_to 'Edit', edit_flat_path(@flat) %>
            <%= link_to 'Back', flats_path %>
            <%= link_to 'Destroy', flat_path(@flat), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
